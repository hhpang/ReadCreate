                        android:layout_height="match_parent"
                        android:src="@drawable/whitecanvas_xsmall" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/canvas5frame"
                    android:layout_width="150dip"
                    android:layout_height="100dip"
                    android:layout_marginBottom="0dip"
                    android:layout_marginLeft="25dip"
                    android:layout_marginTop="10dip"
                    android:background="#FFFFFF" >

                    <com.didithemouse.alfa.MyAbsoluteLayout
                        android:id="@+id/canvas5"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <ImageView
                            android:layout_width="150dip"
                            android:layout_height="100dip"
                            android:src="@drawable/whitecanvas_xsmall" />
                    </com.didithemouse.alfa.MyAbsoluteLayout>

                    <ImageView
                        android:layout_width="150dip"
                        android:layout_height="match_parent"
                        android:src="@drawable/whitecanvas_xsmall" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/canvas6frame"
                    android:layout_width="150dip"
                    android:layout_height="100dip"
                    android:layout_marginBottom="0dip"
                    android:layout_marginLeft="25dip"
                    android:layout_marginTop="10dip"
                    android:background="#FFFFFF" >

                    <com.didithemouse.alfa.MyAbsoluteLayout
                        android:id="@+id/canvas6"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <ImageView
                            android:layout_width="150dip"
                            android:layout_height="100dip"
                            android:src="@drawable/whitecanvas_xsmall" />
                    </com.didithemouse.alfa.MyAbsoluteLayout>

                    <ImageView
                        android:layout_width="150dip"
                        android:layout_height="match_parent"
                        android:src="@drawable/whitecanvas_xsmall" />
                </FrameLayout>
            </LinearLayout>

        </com.didithemouse.alfa.MyAbsoluteLayout>

        <RelativeLayout
            android:id="@+id/canvas_big_layout"
                android:splitMotionEvents="false"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#C2A46F" >

            <FrameLayout
                android:id="@+id/canvas_framelayout"
                    android:splitMotionEvents="false"
                android:layout_width="989dip"
                android:layout_height="670dip"
                android:layout_centerInParent="true"
                android:background="#FFFFFF" >

                <com.didithemouse.alfa.DragLayer
                    android:id="@+id/canvas_big_draglayer"
                        android:splitMotionEvents="false"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#FFFFFF" >
                </com.didithemouse.alfa.DragLayer>
            </FrameLayout>

            <com.didithemouse.alfa.MyAbsoluteLayout
                android:id="@+id/canvas_toolbarlayout"
                android:layout_width="40dp"
                android:layout_height="670dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dip"
                android:layout_toRightOf="@+id/canvas_framelayout"
                android:background="@drawable/toolbar" >
            </com.didithemouse.alfa.MyAbsoluteLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>