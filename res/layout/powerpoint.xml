		    <Button
            android:id="@+id/terminar"
            android:layout_width="99dip"
            android:layout_height="75dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/flecha"
            android:clickable="true" />
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#C2A46F"
        android:orientation="horizontal" >

        <com.didithemouse.alfa.MyAbsoluteLayout
            android:id="@+id/mini_canvas_absolute"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:background="#C2A46F" >

            <LinearLayout
                android:id="@+id/mini_canvas"
                android:layout_width="200dp"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <FrameLayout
                    android:id="@+id/canvas1frame"
                    android:layout_width="150dip"
                    android:layout_height="100dip"
                    android:layout_marginBottom="0dip"
                    android:layout_marginLeft="25dip"
                    android:layout_marginTop="10dip"
                    android:background="#FFFFFF" >

                    <com.didithemouse.alfa.MyAbsoluteLayout
                        android:id="@+id/canvas1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <ImageView
                            android:layout_width="150dip"
                            android:layout_height="100dip"
                            android:src="@drawable/whitecanvas_xsmall" />
                    </com.didithemouse.alfa.MyAbsoluteLayout>

                    <ImageView
                        android:layout_width="150dip"
                        android:layout_height="match_parent"
                        android:src="@drawable/whitecanvas_xsmall" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/canvas2frame"
                    android:layout_width="150dip"
                    android:layout_height="100dip"
                    android:layout_marginBottom="0dip"
                    android:layout_marginLeft="25dip"
                    android:layout_marginTop="10dip"
                    android:background="#FFFFFF" >

                    <com.didithemouse.alfa.MyAbsoluteLayout
                        android:id="@+id/canvas2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <ImageView
                            android:layout_width="150dip"
                            android:layout_height="100dip"
                            android:src="@drawable/whitecanvas_xsmall" />
                    </com.didithemouse.alfa.MyAbsoluteLayout>

                    <ImageView
                        android:layout_width="150dip"
                        android:layout_height="match_parent"
                        android:src="@drawable/whitecanvas_xsmall" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/canvas3frame"
                    android:layout_width="150dip"
                    android:layout_height="100dip"
                    android:layout_marginBottom="0dip"
                    android:layout_marginLeft="25dip"
                    android:layout_marginTop="10dip"
                    android:background="#FFFFFF" >

                    <com.didithemouse.alfa.MyAbsoluteLayout
                        android:id="@+id/canvas3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <ImageView
                            android:layout_width="150dip"
                            android:layout_height="100dip"
                            android:src="@drawable/whitecanvas_xsmall" />
                    </com.didithemouse.alfa.MyAbsoluteLayout>

                    <ImageView
                        android:layout_width="150dip"
                        android:layout_height="match_parent"
                        android:src="@drawable/whitecanvas_xsmall" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/canvas4frame"
                    android:layout_width="150dip"
                    android:layout_height="100dip"
                    android:layout_marginBottom="0dip"
                    android:layout_marginLeft="25dip"
                    android:layout_marginTop="10dip"
                    android:background="#FFFFFF" >

                    <com.didithemouse.alfa.MyAbsoluteLayout
                        android:id="@+id/canvas4"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <ImageView
                            android:layout_width="150dip"
                            android:layout_height="100dip"
                            android:src="@drawable/whitecanvas_xsmall" />
                    </com.didithemouse.alfa.MyAbsoluteLayout>

                    <ImageView
